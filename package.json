{
  "name": "@heroku/mcp-server",
  "description": "Heroku Platform MCP Server",
  "version": "0.0.1-alpha.0",
  "author": "Heroku",
  "bugs": "https://github.com/heroku/heroku-mcp-server/issues",
  "bin": {
    "heroku-mcp-server": "./dist/index.js"
  },
  "type": "module",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.8.0",
    "heroku": "10.4.1-alpha.3",
    "jsonschema": "^1.5.0",
    "tar-stream": "^3.1.7",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.23.0",
    "@modelcontextprotocol/inspector": "^0.7.0",
    "@types/chai": "^5.2.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.13.14",
    "@types/sinon": "^17.0.4",
    "@types/tar-stream": "^3.1.3",
    "@typescript-eslint/eslint-plugin": "^8.28.0",
    "@typescript-eslint/parser": "^8.28.0",
    "chai": "^5.2.0",
    "eslint": "^9.23",
    "eslint-config-salesforce-typescript": "^3.4.0",
    "eslint-plugin-jsdoc": "^50.6.9",
    "husky": "^9.1.7",
    "mocha": "^11.1.0",
    "np": "^10.2.0",
    "nyc": "^17.1.0",
    "prettier": "^3.5.3",
    "shx": "^0.4.0",
    "sinon": "^20.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=22"
  },
  "exports": {
    "./*": {
      "import": "./dist/esm/*",
      "require": "./dist/cjs/*"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "./dist/esm/*"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/heroku/heroku-mcp-server",
  "keywords": [
    "heroku",
    "mcp"
  ],
  "license": "Apache-2.0",
  "repository": "heroku/heroku-mcp-server",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.json && npm run exec-perms",
    "build:dev": "rm -rf dist && tsc --sourceMap -p tsconfig.json && npm run exec-perms",
    "build:watch": "tsc --sourceMap -p tsconfig.json -w",
    "start": "npm run build:dev && npm link && npx @modelcontextprotocol/inspector heroku-mcp-server",
    "format": "prettier . --write --config ./.prettier.mjs",
    "lint": "cd src && eslint ./",
    "posttest": "npm run lint",
    "prepare": "husky",
    "pretest": "npm run build",
    "test": "nyc mocha --forbid-only --loader=ts-node/esm",
    "exec-perms": "shx chmod +x dist/*.js",
    "test:watch": "nyc mocha --watch --forbid-only"
  }
}
